@model Evolita.Admin.Web.Models.CreateStrategyModel
@{
    ViewBag.Title = "Create Strategy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h4>Create Strategy</h4>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Strategies", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2"})
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <button class="btn btn-primary pull-right" type="submit">Continue <i class="fa fa-angle-right"></i></button>
                </div>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}